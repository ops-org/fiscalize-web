<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ImageFotoParlamentar" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">125dp</item>
    </style>

    <style name="ImageFotoPartido" parent="AppTheme">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="TextPergunta" parent="AppTheme">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel" parent="AppTheme">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">@dimen/text_smallest</item>
    </style>

    <style name="Text" parent="AppTheme">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">@dimen/text_smallest</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Button" parent="AppTheme">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_smallest</item>
    </style>

</resources>
